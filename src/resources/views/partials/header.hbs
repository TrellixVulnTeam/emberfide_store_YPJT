	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
	<script>
		const quantityInput = document.querySelectorAll('.quantity-input');
		const quantityPlus = document.querySelectorAll('.quantity-plus');
		const quantityReduce = document.querySelectorAll('.quantity-reduce');
		const totalPrice = document.querySelector('.total-price');
		const realPriceCart = document.querySelectorAll('.real-price-cart');
		const removeProductCart = document.querySelectorAll('.remove-product-cart');
		const productCart = document.querySelectorAll('.product-cart');
		let totalProduct = 0;
		let totalPriceProduct = 0;
		// emptycart remove total price
		if(document.querySelector('#empty-cart')){
			document.querySelector('.group-total-price-cart').remove();
		}
		//show total price product
		quantityInput.forEach((item,index) => {
			totalPriceProduct += item.value * Math.round(parseFloat(realPriceCart[index].textContent.slice(1)) * 100) / 100;
		})
		totalPrice.textContent = `${totalPriceProduct}`
		// show total product
		quantityInput.forEach(item => {
			totalProduct += parseInt(item.value);
		})
		document.querySelector('#total-product').textContent = totalProduct;
		//handle plus product
		quantityPlus.forEach((item,index) => {
			item.onclick = function(){
				quantityInput[index].value++
				$.post( "/cart/plus", { index }, function( data ) {
					console.log(data);
					let totalPriceCartChange = 0;
					totalProduct = 0;
					data.forEach(item => {
						totalProduct += item.count;
						totalPriceCartChange += item.count * item.price.sellPrice;
						totalPriceCartChange = Math.round(totalPriceCartChange * 100) / 100;
					})
					document.querySelector('#total-product').textContent = totalProduct;
					totalPrice.textContent = `${totalPriceCartChange}`;
				});
			}
		})
		quantityReduce.forEach((item,index) => {
			item.onclick = function(){
			if(quantityInput[index].value > 1){
				quantityInput[index].value--
				$.post( "/cart/reduce", { index }, function( data ) {
					let totalPriceCartChange = 0;
					totalProduct = 0;
					data.forEach(item => {
						totalProduct += item.count
						totalPriceCartChange += item.count * item.price.sellPrice;
						totalPriceCartChange = Math.round(totalPriceCartChange * 100) / 100;
					})
					document.querySelector('#total-product').textContent = totalProduct;
					totalPrice.textContent = `${totalPriceCartChange}`;
				});
			}
			}
		})
		quantityInput.forEach((item, index) =>{
			item.addEventListener('change',function(e) {
				console.log(typeof(e.target.value))
				$.post('/cart/quantity-change',{ index, quantity: e.target.value},function(data){
					let totalPriceCartChange = 0;
					totalProduct = 0;
					data.forEach(item => {
						totalProduct += parseFloat(item.count)
						totalPriceCartChange += item.count * item.price.sellPrice;
						totalPriceCartChange = Math.round(totalPriceCartChange * 100) / 100;
					})
					document.querySelector('#total-product').textContent = totalProduct;
					totalPrice.textContent = `${totalPriceCartChange}`;
				})
			})
		})
		removeProductCart.forEach((item,index) => {
			item.onclick = function() {
				$.post('/cart/remove-product-cart',{ index }, function(data) {
					location.reload();
				})
			}
		})
	</script>
	

  
	
	


