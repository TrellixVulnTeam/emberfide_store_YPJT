	<!-- Modal -->
	<div class="modal fade" id="header__cart__modal" tabindex="-1" aria-labelledby="header__cart__modalLabel" aria-hidden="true">
	<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
		<h5 class="modal-title" id="header__cart__modalLabel">Modal title</h5>
		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<div class="modal-body">
			<table class="table">
				<tbody>
					{{#each cart}}
					<tr>
					<td>
						<img src={{this.urlImg0}} class="img-thumbnail" alt="...">
					</td>
					<td>
						{{this.title}}
					</td>
					<td>
						{{this.sellPrice}}
					</td>
					<td>
						{{this.count}}
					</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		<div class="modal-footer">
		<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
		<button type="button" class="btn btn-primary">Save changes</button>
		</div>
	</div>
