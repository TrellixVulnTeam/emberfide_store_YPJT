<div class="container product-template {{product.collection}} my-5">
<div class="row">
    <div class="col-lg-7 ">
        <img style="width: 100%;" src="{{product.urlImg}}" alt="{{product.title}}">
        <div class="gallery-img">
            <div class="row">
                {{#each product.urlImgGallery}}
                    <img src={{this}} class="img-thumbnail col-2 mx-1" alt="...">
                {{/each}}
            </div>
        </div>
    </div>
    <div class="col-lg-5 product-info">
        <form action="" id="form-add-to-cart" method="POST">
            <ul class="list-group list-group-flush mx-1">
                <li class="list-group-item"><h2>{{product.title}}</h2></li>
                <li class="list-group-item"><span class="fs-2 fw-bold">{{product.realPrice}} </span>  <del class="fs-4"> {{product.sellPrice}}</del></li>
                {{#each product.attribute}}
                    <li class="list-group-item attribute-element">
                        <span class="fw-bold">{{this.name}}:</span> <span></span>
                        <ul class="list-group list-group-horizontal row row-cols-auto attribute-group">
                            {{#each this.arrayElement}}
                                <li class="list-group-item me-2 col nowrap cursor-pointer attribute-item">
                                    <div>{{this.name}}</div>
                                </li>
                            {{/each}}
                        </ul>
                    </li>
                    <input type="hidden" name="chooseAttribute[{{@index}}][{{this.name}}]" class="product-info__choose-attribute-input {{this.name}}" >
                {{/each}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-5 quantity px-0">
                            <div class="container-fluid" >
                            <ul class="list-group list-group-horizontal row">
                                <li class="list-group-item col-3 info-product__change-quantity-reduce quantity--changeValue">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-lg" viewBox="0 0 16 16">
                                    <path d="M0 8a1 1 0 0 1 1-1h14a1 1 0 1 1 0 2H1a1 1 0 0 1-1-1z"/>
                                    </svg>
                                </li>
                                <li class="list-group-item col-6">
                                    <input type="text"  name="quantity" class="form-control info-product__quantity-input" value="1">
                                </li>
                                <li class="list-group-item col-3 info-product__change-quantity-plus quantity--changeValue">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                    <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z"/>
                                    </svg>
                                </li>
                            </ul>
                            </div>
                        </div>
                        <div class="col-7 add-to-cart">
                            <div href="/cart/add/{{product._id}}" data-id={{product._id}} class="product-info__add-to-cart btn btn-primary btn-lg ">ADD TO CART</div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item buy-it-now">
                    <div href="#" data-id={{product._id}} class="product-info__buy-it-now btn btn-primary btn-lg">BUY IT NOW</div>
                </li>
                <li class="list-group-item banner-safe-secure py-4 border-bottom">
                    <img src="/img/mcafee-banner_1.png" alt="" style="width: 100%;">
                </li>
                <li class="list-group-item ">
                    <div class="row">
                        <div class="col-2 text-center my-3 ">
                            <button type="button" class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                                <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"></path>
                                </svg>
                            </button>
                        </div>
                        <div class="col-2 text-center my-3 ">
                            <button type="button" class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                                <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"></path>
                                </svg>
                            </button>
                        </div>
                        <div class="col-2 text-center my-3 ">
                                <button type="button" class="btn btn-secondary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"></path>
                                    </svg>
                                </button>
                        </div>
                    </div>
                </li>
            </ul>
        </form>
    </div>
</div>
</div>
<script>
    const attributeGroup = document.querySelectorAll('.attribute-group');
    const quantityInput_infoProduct = document.querySelector('.info-product__quantity-input');
    const quantityPlus_infoProduct = document.querySelector('.info-product__change-quantity-plus');
    const quantityReduce_infoProduct = document.querySelector('.info-product__change-quantity-reduce');
    const chooseAttributeInput = document.querySelectorAll('input.product-info__choose-attribute-input');
    const addToCart = document.querySelector('.product-info__add-to-cart');
    const formAddToCart = document.querySelector('#form-add-to-cart');
    //handle choose attribute product
    attributeGroup.forEach((element,index1) => {
        element.querySelectorAll('.attribute-item div')[0].classList.add('active-item-attribute');
        chooseAttributeInput[index1].value = element.querySelector('.attribute-item div').textContent;
        element.querySelectorAll('.attribute-item div').forEach((item,index) => {
            item.onclick = function(){
                element.querySelector('.active-item-attribute').classList.remove('active-item-attribute');
                item.classList.add('active-item-attribute');
                chooseAttributeInput[index1].value = item.textContent;
            }
        })
    })
    //handle change quantity product
    quantityPlus_infoProduct.onclick = function(){
        quantityInput_infoProduct.value++
    }
    quantityReduce_infoProduct.onclick = function(){
        if(quantityInput_infoProduct.value > 1){
            quantityInput_infoProduct.value--
        }
    }
    //handle add to cart product
    addToCart.onclick = function() {
        formAddToCart.action = `/cart/add/${this.dataset.id}`;
        formAddToCart.submit();
    }
    
</script>